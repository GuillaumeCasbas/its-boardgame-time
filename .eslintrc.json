{
    "root": true,
    "extends": [
        "react-app",
        "react-app/jest",
        "airbnb",
        "airbnb-typescript",
        "airbnb/hooks"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": ["./tsconfig.json"]
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "react/function-component-definition": [2, { "namedComponents": "arrow-function" }]
    },
    "ignorePatterns": ["src/**/*.test.ts"]
}
